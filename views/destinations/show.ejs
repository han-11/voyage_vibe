<% layout('layouts/boilerplate') %>


  <link rel="stylesheet" href="/styles/stars.css">



  <div class="row">
    <div class="col-6 ">

      <div id="destinationCarousel" class="carousel slide">
        <div class="carousel-inner">
          <img src="<%=destination.image%>" class="d-block w-100" alt="...">
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#destinationCarousel" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#destinationCarousel" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>



      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">
            <%= destination.title%>
          </h5>
          <p class="card-text">
            <%= destination.description%>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted">
            <%= destination.location%>
          </li>

          <li class="list-group-item">
            <%= destination.date%>
          </li>
        </ul>

        <div class="card-body">
          <a class="card-link btn btn-info" href="/destinations/<%=destination._id%>/edit">Edit</a>
          <form class="d-inline" action="/destinations/<%=destination._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
        <div class="card-footer text-muted">
          <%= destination.date%>
        </div>
      </div>
    </div>
    <div class="col-6">
      <form action="/destinations/<%=destination._id %>/comments" method="POST" class="mb-3 validated-form" novalidate>
        <div class="mb-3">
          <label class="form-label" for="rating">Rate Your Experience</label>
          <input class="form-range" type="range" min="1" max="5" name="comment[rating]" id="rating">
        </div>

        <div class="mb-3">
          <label class="form-label" for="body">Comment</label>
          <textarea class="form-control" name="comment[body]" id="body" cols="30" rows="3" required></textarea>
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
        <button class="btn btn-success">Submit</button>
      </form>

      <% for(let comment of destination.comments ){ %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">
              Rating:
            </h5>
            <p class="starability-result" data-rating="<%= comment.rating %>">
              Rated: <%= comment.rating %> stars
            </p>

            <p class="card-text">
              comment: <%= comment.body %>
            </p>
            <form action="/destinations/<%=destination._id %>/comments/<%=comment._id %>?_method=delete" method="POST">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
    </div>

  </div>