<%- layout('layouts/boilerplate') %>

<% if (destinations.length) { %>
    <h1 class="fs-2 mb-4">
        Search Results for "<%= searchTerm %>"
    </h1>
<% } else { %>
    <h2 class="fs-2 mb-4"> 
        No results for "<%= searchTerm %>"
    </h2>
    <p>
        Please try searching again. You can use terms from the destinationground name or location in your query.
    </p>
<% } %>

<section class="row d-flex">

    <% for (let destination of destinations) { %>
        <div class="card destination-card">
            <div class="row g-0">
              <div class="col-md-6 card-img-left">                      
                  <img class="img-fluid" alt="" src="<%= destination.images[0] ? destination.images[0].url : 'https://images.unsplash.com/photo-1468245856972-a0333f3f8293?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80' %>">
              </div>
              <div class="col-md-6">
                <div class="card-body">
                  <h5 class="card-title">
                    <a href="/destinations/<%= destination._id %>"><%= destination.name %></a>
                    
                  </h5>
                  <p class="card-text">
                    <small>
                      <%= destination.description.substring(0, 150) %>
                    </small>
                  </p>     
                  <p class="card-text text-muted">
                    <%= destination.location %>
                </p>                
                </div>
              </div>
            </div>
        </div>
    <% } %>
  
  </section>
  