<% layout('layouts/boilerplate') %>

  <div class="row">
    <h1 class="text-center"> Share Your destination</h1>
    <div class="col-6 offset-3">
      <form action="/destinations" method="POST" class="validated-form" enctype="multipart/form-data" novalidate>
        <div class="mb-3">
          <label class="form-label" for="title">Title</label>
          <input class="form-control" type="text" name="destination[title]" id="title" placeholder="title" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location</label>
          <input class="form-control" type="text" name="destination[location]" id="location" placeholder="location"
            required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="date">Travelling Date</label>
          <div class="input-group">

            <input class="form-control" type="date" name="destination[date]" id="date" aria-describedby="date-label"
              placeholder="yyyy-mm-dd" required>

            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="description">Description</label>
          <textarea class="form-control" type="text" name="destination[description]" id="description"
            placeholder="Description" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <div class="mt-3 custom-file">
            <label for="image" class="form-label ">Upload Images</label>
            <input class="form-control " type="file" id="image" name="image" multiple>
            <label for="image" class="form-label custom-file-label" name="image" id="image"></label>
          </div>
        </div>


        <div class="mb-3">
          <button class="btn btn-success">Add destination</button>
        </div>
      </form>
      <a href="/destinations">All destinations</a>
    </div>
  </div>